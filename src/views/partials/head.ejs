<script> // put this in js extension file 
  const button = document.getElementById('theme');
  const body = document.querySelector('body');
  let darkMode = localStorage.getItem('data-bs-theme'); //localStorage store data on user pc 
  let moon = document.getElementById('moon')
  let sun = document.getElementById('sun')

  const darkModeOn = () => {
    body.setAttribute('data-bs-theme', 'dark');     //change body attribute
    localStorage.setItem('data-bs-theme', 'dark');  //change localStorage variable
    sun.style.display = 'none'; //hide sun icon and show moon icon
    moon.style.display = 'block';

  };
  const lightModeOn = () => {
    body.setAttribute('data-bs-theme', 'light');
    localStorage.setItem('data-bs-theme', 'light');
    sun.style.display = 'block'; //hide moon icon and show sun icon
    moon.style.display = 'none';
  };
  if (darkMode === 'dark') { // update user current localStorage with the correct mode
    darkModeOn();
  } else {
    lightModeOn();
  }
  button.onclick = function () { //  dark or light mode button trigger upon clicking button
    darkMode = localStorage.getItem('data-bs-theme');
    if (darkMode === 'dark') {
      lightModeOn();
    } else {
      darkModeOn();
    }
  };
</script>
