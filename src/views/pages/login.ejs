<%- include ('../partials/head') %> 
<%- include ('../partials/menu') %>
<div class="col text-center"><%- include ('../partials/message') %></div>
<main>

<div class="container h-100 d-grid align-item-center justify-content-center text-center ">
    <span class="border border-light rounded">
  <div class="container p-5">
      <h2 class="align-item-center " >Login</h2>
    <form class="p-3" action="/login" method="POST" autocomplete="off" id="login">
<!-- username bar -->
      <label class="form-group row" for="name"></label>
        <div class="input-group">
          <input class="form-control input-lg border-end-0" type="text" id="username" name="username" placeholder="Enter Username"/>
          <span class="input-group-text bg-transparent">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
              <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
            </svg>
          </span>
        </div>
<!-- password bar-->
        <label class="form-group row p-3" for="password"></label>
          <div class="input-group">
            <input class="form-control input-lg border-end-0"   type="password" id="password" name="password" placeholder="Enter password"/>
            <span class="input-group-text bg-transparent">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
              </svg>
            </span>
          </div>
<!-- button -->
        <div class="form-group row pt-4">
          <button class="btn btn-sm btn-primary text-center" type="submit" > Login</button>
         </div>
      </form>

    <div class = "mb-3 form-check">
        <label class = "form-check-label" for="exampleCheck1">Don't have an account?</label>
        <a href="/register"> Register</a>
      </div>
    </div>
    </span>
  </div>
</main>

